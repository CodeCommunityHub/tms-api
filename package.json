{
  "name": "tms-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/CodeCommunityHub/tms-api.git",
  "author": "Anuradha Fernando <anufdo@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start-node": "node build/index.js",
    "dev": "ts-node-dev src/index.ts",
    "test": "yarn jest test --silent",
    "test:ci": "yarn jest test --silent --maxWorkers=2 --forceExit",
    "build": "tsc -p .",
    "tsc": "tsc -p . --pretty --skipLibCheck --noEmit",
    "bootstrap": "git pull origin main && yarn install",
    "lint": "eslint --fix ./src/**/*.ts",
    "format": "yarn prettier -w ./src/** --loglevel silent"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn tsc && yarn lint && yarn test",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.5",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.14.191",
    "@types/node": "^20.12.13",
    "@types/sequelize": "^4.28.14",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^9.0.11",
    "jest": "^29.3.1",
    "prettier": "^2.8.2",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.0.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@types/validator": "^13.11.9",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.1",
    "chalk": "^5.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.0.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "mysql2": "^3.9.8",
    "reflect-metadata": "^0.2.1",
    "sequelize": "^6.28.0",
    "sequelize-cli": "^6.5.2",
    "sequelize-typescript": "^2.1.6",
    "socket.io": "^4.5.4",
    "uuid": "^8.3.2"
  }
}
